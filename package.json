    "@types/write-pkg": "^3.1.0",
    "is-windows": "^1.0.2",
    "isexe": "^2.0.0",
    "load-yaml-file": "^0.1.0",
    "mz": "^2.7.0",
    "path-exists": "^3.0.0",
    "tape": "^4.9.0",
    "util.promisify": "^1.0.0",
    "write-pkg": "^3.1.0"
  }
}
